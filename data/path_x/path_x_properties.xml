<?xml version="1.0" encoding="UTF-8"?>
<!--
    The properties in this file setup a Harry Potter flavor of this game called
    The Sorting Hat. Note that by swapping out all these settings we could easily
    change the flavor.
-->
<properties>
    <property_list>
        <!-- ALL THE IMAGES TO BE USED IN THE GAME -->
        <property name="IMAGE_BACKGROUND_GAME"              value="./path_x/BackgroundGame.png"></property>
        <property name="IMAGE_BACKGROUND_MENU"              value="./path_x/BackgroundMenu.png"></property>
        <property name="IMAGE_BUTTON_HELP"                  value="./path_x/ButtonHelp.png"></property>
        <property name="IMAGE_BUTTON_HELP_MOUSE_OVER"       value="./path_x/HelpButtonMouseOver.png"></property>
        <property name="IMAGE_BUTTON_CLOSE"                 value="./path_x/ButtonClose.png"></property>
        <property name="IMAGE_BUTTON_HOME"                  value="./path_x/ButtonHome.png"></property>
        <property name="IMAGE_BUTTON_PLAY"                  value="./path_x/ButtonPlay.png"></property>
        <property name="IMAGE_BUTTON_PLAY_MOUSE_OVER"       value="./path_x/PlayButtonMouseOver.png"></property>
        <property name="IMAGE_BUTTON_RESET"                 value="./path_x/ButtonReset.png"></property>
        <property name="IMAGE_BUTTON_RESET_MOUSE_OVER"      value="./path_x/ResetButtonMouseOver.png"></property>
        <property name="IMAGE_BUTTON_SETTINGS"              value="./path_x/ButtonSettings.png"></property>
        <property name="IMAGE_BUTTON_SETTINGS_MOUSE_OVER"   value="./path_x/SettingsButtonMouseOver.png"></property>
        
        
        <property name="IMAGE_WINDOW_ICON"                  value="./path_x/WindowIcon.png"></property>
 

        <!-- ALL THE TEXT TO BE DISPLAYED -->
        <property name="TEXT_ERROR_LOADING_AUDIO"               value="Error Loading an Audio File"></property>
        <property name="TEXT_ERROR_LOADING_LEVEL"               value="Error Loading a Level File"></property>
        <property name="TEXT_ERROR_LOADING_RECORD"              value="Error Loading the Player Record"></property>
        <property name="TEXT_ERROR_LOADING_XML_FILE"            value="Error Loading an XML File"></property>
        <property name="TEXT_ERROR_SAVING_RECORD"               value="Error Saving the Player Record"></property>
        <property name="TEXT_PROMPT_EXIT"                       value="Are you sure you wish to exit?"></property>
        <property name="TEXT_TITLE_BAR_GAME"                    value="PathX"></property>
        <property name="TEXT_TITLE_BAR_ERROR"                   value="An error has occurred"></property>                
        
        <!-- AUDIO FILES -->
        <property name="AUDIO_CUE_BAD_MOVE"                 value="./path_x/BadMove.wav"></property>
        <property name="AUDIO_CUE_CHEAT"                    value="./path_x/Cheat.wav"></property>
        <property name="AUDIO_CUE_DESELECT_TILE"            value="./path_x/DeselectTile.wav"></property>
        <property name="AUDIO_CUE_GOOD_MOVE"                value="./path_x/GoodMove.wav"></property>
        <property name="AUDIO_CUE_SELECT_TILE"              value="./path_x/SelectTile.wav"></property>
        <property name="AUDIO_CUE_UNDO"                     value="./path_x/Undo.wav"></property>
        <property name="AUDIO_CUE_WIN"                      value="./path_x/Win.mid"></property>
        <property name="SONG_CUE_GAME_SCREEN"               value="./path_x/GameSong.mid"></property>        
        <property name="SONG_CUE_MENU_SCREEN"               value="./path_x/MenuSong.mid"></property>
    </property_list>
    
    <!-- PLAYABLE LEVELS CREATED WITH THE LEVEL EDITOR -->
    <property_options_list>
        <property_options name="LEVEL_OPTIONS">
            <option>./path_x/BubbleSortCoil.sort</option>
            <option>./path_x/SelectionSortSine.sort</option>
            <option>./path_x/BubbleSortO.sort</option>
            <option>./path_x/SelectionSortU.sort</option>
        </property_options>
        <property_options name="LEVEL_IMAGE_OPTIONS">
            <option>./path_x/ButtonBubbleSortCoil.png</option>
            <option>./path_x/ButtonSelectionSortSine.png</option>
            <option>./path_x/ButtonBubbleSortO.png</option>
            <option>./path_x/ButtonSelectionSortU.png</option>
        </property_options>
        <property_options name="LEVEL_MOUSE_OVER_IMAGE_OPTIONS">
            <option>./path_x/ButtonBubbleSortCoilMouseOver.png</option>
            <option>./path_x/ButtonSelectionSortSineMouseOver.png</option>
            <option>./path_x/ButtonBubbleSortOMouseOver.png</option>
            <option>./path_x/ButtonSelectionSortUMouseOver.png</option>
        </property_options>
    </property_options_list>
</properties>